    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/server/server.ts",
            "outFiles": [
                "${workspaceFolder}/ts-build/**/*.js"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch peer_node1",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/tests/test_node1.ts",
            "outFiles": [
                "${workspaceFolder}/ts-build/**/*.js"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Test firebase",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/firebase.ts",
            "outFiles": [
                "${workspaceFolder}/ts-build/**/*.js"
            ],
            "console": "integratedTerminal"
        }
    ]
}